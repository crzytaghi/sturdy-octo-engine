<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <!-- Adding partials in order to add specific styling to multiple pages without having to style each individual page -->
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <nav class="navbar navbar-light bg-dark ">
      <h2 style="color:ghostwhite;">Bone Apple Teeth</h2>
      <%- include('../partials/nav.ejs') %>
    </nav>
    <div class="fluid-container mt-5 mx-auto" style="width:90%">
      <div class="d-flex flex-row-reverse">
        <div class="p-2">
          <a href="/recipe/new" class="btn btn-outline-secondary">Create New Recipe</a>
        </div>
      </div>
      <div class="card-columns">
        <!-- In order to access the information from the database, loop through the data using <% %> which gives the developer access to implement javascript in the file. -->
        <% for (let recipe of recipes) { %>
          <div class="card p-1">
            <img class="card-img-top" src="<%=recipe.img%>" alt="<%=recipe.title%>">
            <div class="card-body">
              <h5 class="card-title"><%=recipe.title%></h5>
              <a href="/recipe/<%=recipe.id%>" class="btn btn-outline-secondary">Explore</a>
            </div>

          </div>

        <% } %>
      </div>
    </div>
    <%- include ('../partials/footer.ejs') %>
  </body>
</html>
