<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <nav class="navbar bg-dark" style="color:ghostwhite">
      <h1>Add New Recipe</h1>
      <a class="btn btn-primary" role="button" href="/recipe">Back To Home Page</a>
    </nav>
    <div class="container mt-3">
      <form action="/recipe" method="POST">
        <div class="form-group">
          <label>Title</label>
          <input type="text" name="title" placeholder="Recipe Title" class="form-control">
          <label>Ingredients</label>
          <textarea class="form-control" name="ingredient" rows="8" cols="80"></textarea>
          <label>Process</label>
          <textarea name="process" rows="8" cols="80" class="form-control"></textarea>
          <label>Image</label>
          <input type="text" name="img" class="form-control" placeholder="Link to Image if available">
          <label>Cook Time (min)</label>
          <input type="number" name="time" placeholder="Time in minutes" class="form-control">
          <label>Type</label>
          <input type="text" name="type" placeholder="Mexican/Persian/Thai/..." class="form-control">
          <input type="submit" value="Create Recipe" class="btn btn-outline-primary m-2">
        </div>
      </div>
    </form>
    <%- include ('../partials/footer.ejs') %>
  </body>
</html>
